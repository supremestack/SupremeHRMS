<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <!-- Supreme Dashboard - MuK Theme Compatible -->
    <t t-name="supreme_dashboard.Dashboard" owl="1">
        <div class="supreme_dashboard o_dashboard">
            <!-- Header with MuK styling -->
            <div class="dashboard_header mb-4 p-3 bg-primary text-white rounded">
                <h2 class="mb-0">
                    <i class="fa fa-dashboard me-2"/>
                    HR Dashboard
                </h2>
                <small class="text-white-50">
                    Last updated: <t t-esc="state.lastUpdate"/>
                </small>
            </div>
            
            <!-- Metrics Grid - Responsive with MuK -->
            <div class="row g-3 mb-4">
                <!-- Total Employees -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="dashboard_card h-100">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                    <i class="fa fa-users fa-2x text-primary"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Total Employees</h6>
                                <h3 class="metric mb-0">
                                    <t t-esc="state.metrics.total_employees"/>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Present Today -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="dashboard_card h-100">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                    <i class="fa fa-check-circle fa-2x text-success"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Present Today</h6>
                                <h3 class="metric mb-0">
                                    <t t-esc="state.metrics.present_today"/>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- On Leave -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="dashboard_card h-100">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                                    <i class="fa fa-calendar-times-o fa-2x text-warning"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">On Leave</h6>
                                <h3 class="metric mb-0">
                                    <t t-esc="state.metrics.on_leave"/>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Pending Approvals -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="dashboard_card h-100">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                                    <i class="fa fa-clock-o fa-2x text-danger"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Pending Approvals</h6>
                                <h3 class="metric mb-0">
                                    <t t-esc="state.metrics.pending_approvals"/>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Charts Row - MuK Responsive -->
            <div class="row g-3 mb-4">
                <!-- Attendance Trend -->
                <div class="col-12 col-lg-8">
                    <div class="dashboard_card h-100">
                        <h5 class="mb-3">
                            <i class="fa fa-line-chart me-2"/>
                            Attendance Trend (30 Days)
                        </h5>
                        <div class="chart-container" style="position: relative; height:300px;">
                            <canvas t-ref="attendanceChart"/>
                        </div>
                    </div>
                </div>
                
                <!-- Department Distribution -->
                <div class="col-12 col-lg-4">
                    <div class="dashboard_card h-100">
                        <h5 class="mb-3">
                            <i class="fa fa-pie-chart me-2"/>
                            By Department
                        </h5>
                        <div class="chart-container" style="position: relative; height:300px;">
                            <canvas t-ref="departmentChart"/>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Work Location Distribution - MuK Cards -->
            <div class="row g-3 mb-4">
                <div class="col-12">
                    <div class="dashboard_card">
                        <h5 class="mb-3">
                            <i class="fa fa-map-marker me-2"/>
                            Work Location Distribution
                        </h5>
                        <div class="row text-center">
                            <div class="col-6 col-md-3" t-foreach="state.metrics.work_locations" t-as="location" t-key="location.type">
                                <div class="p-3 border rounded">
                                    <i t-attf-class="fa fa-2x mb-2 {{location.icon}} {{location.color}}"/>
                                    <h4 class="mb-1">
                                        <t t-esc="location.count"/>
                                    </h4>
                                    <small class="text-muted">
                                        <t t-esc="location.label"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Activities - MuK List Style -->
            <div class="row g-3">
                <div class="col-12 col-lg-6">
                    <div class="dashboard_card">
                        <h5 class="mb-3">
                            <i class="fa fa-user-plus me-2"/>
                            Recent Joiners
                        </h5>
                        <div class="list-group list-group-flush">
                            <div t-foreach="state.recentJoiners" 
                                 t-as="employee" 
                                 t-key="employee.id"
                                 class="list-group-item px-0">
                                <div class="d-flex align-items-center">
                                    <img t-att-src="employee.image" 
                                         class="rounded-circle me-3"
                                         width="40" 
                                         height="40"/>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">
                                            <t t-esc="employee.name"/>
                                        </h6>
                                        <small class="text-muted">
                                            <t t-esc="employee.job_title"/> â€¢ 
                                            <t t-esc="employee.department"/>
                                        </small>
                                    </div>
                                    <small class="text-muted">
                                        <t t-esc="employee.join_date"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-12 col-lg-6">
                    <div class="dashboard_card">
                        <h5 class="mb-3">
                            <i class="fa fa-birthday-cake me-2"/>
                            Upcoming Birthdays
                        </h5>
                        <div class="list-group list-group-flush">
                            <div t-foreach="state.upcomingBirthdays" 
                                 t-as="employee" 
                                 t-key="employee.id"
                                 class="list-group-item px-0">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-info bg-opacity-10 p-2 me-3">
                                        <i class="fa fa-gift text-info"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">
                                            <t t-esc="employee.name"/>
                                        </h6>
                                        <small class="text-muted">
                                            <t t-esc="employee.department"/>
                                        </small>
                                    </div>
                                    <span class="badge bg-info">
                                        <t t-esc="employee.birthday"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    
</templates>
